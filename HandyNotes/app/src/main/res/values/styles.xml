<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
		<item name="android:actionBarStyle">@style/MyActionBar</item>
		<item name="android:actionMenuTextColor">@color/actionbar_text</item>

        <item name="android:colorPrimary">#42A5F5</item>
        <item name="android:colorPrimaryDark">#1976D2</item>
		<item name="android:colorAccent">#444444</item>
    </style>
	
	<style name="MyActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
		<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
	</style>

	<style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionbar_text</item>
	</style>



</resources>
